<p id="notice"><%= notice %></p>

<h1>Listing Previous Searches</h1>

<table class="table dt-responsive nowrap" width="100%" cellspacing="0" id = "queries" >
  <thead>
    <tr>
      <th>HashTag</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.name %></td>
        <td><%= link_to 'Show Tweets', query ,class: "btn btn-primary"%></td>
        <td><%= link_to 'Destroy Search Results', query, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Query', new_query_path,class: "btn btn-primary fixed-width" %>


<script >
    $(document).ready(function() {
        $('#queries').DataTable( {
            responsive: true,
        } );
    } );
</script>
